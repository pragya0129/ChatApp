<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="/socket.io/socket.io.js"></script>
    <link rel="stylesheet" href="/styles/style.css" />
  </head>
  <body>
    <div class="container">
      <h1 class="chatAppHeading"><span>Chat Application<span></h1>
      <button id="showActivePeople">Show Current Active People</button>
      <div class="userDetails">
        <input type="text" id="username" placeholder="Enter Username" /><br />
        <button id="btn1">Enter ChatRoom</button>
      </div>

      <div class="chattingApp">
        <input type="text" id="chatbox" /><br />
        <button id="btn" >Send</button>
      </div>

      <ul class="msgList"></ul>
    </div>

    

    <div id="activePeopleModal" class="modal">
      <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Active Users</h2>
        <div class="activePeopleList"></div>
      </div>
    </div>

    <audio id="joinSound" src="/audio/Join.mp3"></audio>
  <audio id="disconnectSound" src="/audio/disconnect.mp3"></audio>

    <script src="/js/chat.js"></script>
  </body>
</html>
